{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="container p-5">
        <button type="button-inline" class="btn btn-secondary"><a href="{{ path( 'ticket-index' ) }}">Retour à la liste</a></button>
        <div class="d-flex flex-wrap mt-4">
            <div class="card list-ticket border-grey mb-3 mr-4 mt-3 w-100">
                <div class="card-header d-flex justify-content-between">
                    <strong class="card-title">
                        <p class="mb-0">Ticket #{{ customer.id }}</p>
                        <p class="mb-0">Créé le {{ customer.createdAt|date('d-m-Y, H:i:s') }}</p>
                    </strong>
                </div>
                <div class="card-body">
                    <strong class="card-title text-capitalize">{{ customer.firstname }} {{customer.lastname }}</strong>
                    <hr class="border-secondary">
                    <p class="card-text">{{ customer.email }}</p>
                    <p class="card-text">{{ customer.phone }}</p>
                    <p class="card-text">{{ customer.adress }}, {{ customer.zip }} {{ customer.city }}</p>
                    <p class="card-text">Message : {{ customer.message }}</p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
